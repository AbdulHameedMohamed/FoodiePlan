<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:elevation="8dp"
    app:cardCornerRadius="25dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_inspiration">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/p_iv_meal_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/placeholderColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/p_btn_favourite"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="#E0E0E0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/p_tv_meal_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@id/p_category_meal"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#E0E0E0"/>

        <View
            android:id="@+id/p_category_meal"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginBottom="8dp"
            android:background="#E0E0E0"
            app:layout_constraintBottom_toBottomOf="@id/p_iv_meal_img"
            app:layout_constraintStart_toStartOf="@+id/p_tv_meal_name"
            app:layout_constraintEnd_toStartOf="@id/p_country_meal"/>

        <View
            android:id="@+id/p_country_meal"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:background="#E0E0E0"
            app:layout_constraintBottom_toBottomOf="@id/p_category_meal"
            app:layout_constraintEnd_toEndOf="@+id/p_tv_meal_name"
            app:layout_constraintStart_toEndOf="@id/p_category_meal"
            app:layout_constraintTop_toTopOf="@id/p_category_meal" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>