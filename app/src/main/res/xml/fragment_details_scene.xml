<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/tv_meal_details_name"
               motion:framePosition="110"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/tv_meal_details_category"
               motion:framePosition="110"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/tv_meal_details_country"
               motion:framePosition="110"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/iv_meal_img"
               motion:framePosition="110"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/ib_favourite"
               motion:framePosition="110"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/gradient_overlay"
               motion:framePosition="110"
               android:alpha="0" />
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/cv_meal_img"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/cv_meal_img"
            android:elevation="2dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:alpha="0"
            android:layout_height="1dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>